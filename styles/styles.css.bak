:root{
  --editor-bg:hsl(70,8%,15%);
  --editor-border:hsl(60, 30%, 96%);
}

@font-face{
  font-family: 'JetBrains Mono';
  src: url('/JetBrainsMono-2.304/fonts/ttf/JetBrainsMono-Regular.ttf') format('truetype');
  font-weight: normal;
  font-style: normal;
}

*{
  padding:0;
  margin:0;
  box-sizing:border-box;
}

h1{
  font-family: jetBrains Mono;
  color:hsl(32, 98%, 56%); 
  font-size: 40pt;
  padding-left: 20px;
}
h2{
  font-family: jetBrains Mono;
  color:hsl(32, 98%, 56%); 
  font-size: 30pt;
  padding-left: 20px;
}
button{
  font-family: jetBrains Mono;
  color:#ccc; 
  font-size: large;
}
h3{
  font-family: jetBrains Mono;
  color:hsl(30, 83%, 34%);
  font-size: 25pt;
  padding-left: 20px;
}
p{
  font-family: jetBrains Mono;
  color:#ccc; 
  font-size: 20pt;
  padding-left: 20px;
}
.question--text{
  background-color:hsl(70,8%,15%) ;
  min-height: 50%;
  max-height: auto;
  border:1px solid;
  border-color: #ccc;
  border-radius: 0%;
  border-radius: 23px;
    background: #1a1a1a;
    box-shadow: inset 5px 5px 5px #0a0a0a,
                inset 15px 15px 15px #2a2a2a;
  
}
.testcases{
  background-color:hsl(70,8%,15%) ;
  min-height: 42.5%;
  max-height: auto;
  border:1px solid;
  border-color: #ccc;
  border-radius: 0%;
  padding-left: 0px;
  border-radius: 23px;
    background: #1a1a1a;
    box-shadow: inset 5px 5px 5px #0a0a0a,
                inset 15px 15px 15px #2a2a2a;
}
.dotted-line {
  border-top: 6px dotted #ccc; /* Adjust thickness and color as needed */
  width: 100%; /* Adjust width as needed */
  margin: 20px 0; /* Adjust margin as needed */
  margin-bottom: 2px;
  margin-top: 2px;
  ;
}
.no-bullet {
  list-style-type: none;
}




html,body{
  height:100%;
  width:100%;
  background-color: hsl(70,8%,15%);
}
.question--data{
  position: absolute;
  right:55%;
  left:auto;
  height: 100%;
  width:45%;
  flex-direction: column;
  justify-content: center;
  align-items:center;
  padding-left: 5px;
  
}
.editor{
  position: absolute;
  left: 45%;
  right: auto;

  
  height: 100%;
  width: 55%;
  display:flex;
  flex-direction: column;
  justify-content:center;
  align-items: center;
}
.editor__wrapper{
  height: 100%;
  width: 100%;
  display:flex;
  flex-direction: column; 
  background: var(--editor-bg);
  padding: 2em;
  border-radius:3px;
  border:1px solid #ccc;
}

.title{
  min-height: 7.5%;
  max-height: auto;
  background-color: hsl(70,8%,15%);
  border:1px solid;
  border-color: #ccc;
  border-radius: 3%;
  border-radius: 23px;
    background: #1a1a1a;
    box-shadow: inset 5px 5px 5px #0a0a0a,
                inset 15px 15px 15px #2a2a2a;
}
.breaker{
  content: "A" !important;
  display: block !important;
  margin-bottom: 1.5em !important;
}
.editor__body{
  flex:1;
}
.editor__footer{
  display:flex; 
}
.editor__footer--left{
  display:flex;
  flex-direction: column;
}
.editor__footer--right{
  flex:1;
  margin-left: 10px;
  overflow: hidden;
}
.editor__btn{
  border:0;
  padding: .5em;
  background-color:#333;
  border: 2px solid hsl(60, 30%, 96%);
  color:#ccc;
  margin-top:1em;
  width:100px;
  cursor:pointer;
}
.editor__console{
  background-color: hsl(70,8%,15%);
  width: 100%;
  height:130px;
  margin-top:.9em ;
  border:1px solid var(--editor-border);
  overflow:auto;
}
.editor__code {
  position:relative;
  height:100%;
  width:100%;
  top: 0;
  bottom:0;
  left:0;
  right:0;
  border: 1px solid var(--editor-border);
}